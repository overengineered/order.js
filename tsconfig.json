{
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "noErrorTruncation": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules/"]
}
